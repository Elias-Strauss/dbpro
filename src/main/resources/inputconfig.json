{
  "version": "1.0",
  "defaultSchema": "HDFS",
  "schemas": [
    {
      "name": "HDFS",
      "type": "custom",
      "factory": "polydb.global.GlobalSchemaFactory",
      "operand": {
        "system": "hdfs",
        "database": "data"
      }
    },
    {
      "name": "HBASE",
      "type": "custom",
      "factory": "polydb.global.GlobalSchemaFactory",
      "operand": {
        "system": "hbase",
        "database": "default"
      }
    },
    {
      "name": "HIVE",
      "type": "custom",
      "factory": "polydb.global.GlobalSchemaFactory",
      "operand": {
        "system": "hive",
        "database": "default"
      }
    },
    {
      "name": "POSTGRES",
      "type": "custom",
      "factory": "polydb.global.GlobalSchemaFactory",
      "operand": {
        "system": "postgres",
        "database": "polydb"
      }
    }
  ]
}